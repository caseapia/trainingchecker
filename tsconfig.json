{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/components/*": ["./src/components/*"],
      "@/consts/*": ["./src/shared/consts/*"],
      "@/public/*": ["./public/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/icons/*": ["./public/assets/icons/*"],
    }
  },
  "include": [
    "svgr.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
  ],
  "exclude": ["node_modules"]
}